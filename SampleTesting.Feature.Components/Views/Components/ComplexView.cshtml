@using Sitecore.Globalization
@model SampleTesting.Feature.Components.Models.ComplexViewModel

@if (Model == null || Model.Datasource == null)
{
    return;
}

@{
    var cssClass = Model.RenderingParameters.Position == new Guid("")
        ? "right-col"
        : "left-col";
}

<div class="simple-view-model @cssClass">
    <h1>
        Simple View Model
    </h1>
    <div>
        @Html.Glass().Editable(Model.Datasource, x => x.Title)
    </div>
    <div>
        @Html.Glass().Editable(Model.Datasource, x => x.Description)
    </div>
</div>